<div class='row'>
  <table class="table table-bordered custom-table">
    <thead>
      <tr>
        <th>contact一覧</th>
        <th>送信者</th>
        <th>受信日</th>
      </tr>
    </thead>
    <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td class="<%= !contact.admin_read ? 'text-danger font-weight-bold' : '' %>">
          <%= !contact.admin_read ? 'NEW' : '' %>
          <%= link_to contact.title, admin_contact_path(contact) %>
        </td>

        <td><%= contact.customer.name %></td>
        <td><%= contact.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
    <%= paginate @contacts %>
</div>
