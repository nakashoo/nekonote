<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto text-font">
    <h2>User info</h2>
    <%= form_with url: admin_admins_information_path, method: :patch, model:current_admin do |f| %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="field">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>
      <div class="form-group">
        <%= f.label :responsible %>
        <%= f.text_area :responsible, class: "form-control responsible" %>
      </div>
      <div class="form-group row justify-content-center">
        <%= f.submit "更新", class: "btn btn-dark" %>
      </div>
    <% end %>
  </div>
</div>
</div>
