<!--運営用 sign up画面-->
<div class="container">
    <div class="row mb-3 justify-content-center">
        <div class="col-6 d-flex justify-content-end">
            <%= link_to "Admin log in", new_admin_session_path, class: "btn btn-outline-info text-font" %>
        </div>
        <div class="col-6 d-flex justify-content-start">
          <div class="text-dark btn btn-info me-2 text-font">Admin Sign in</div>
        </div>
    </div>
    <div class="row justify-content-center">
    <%= form_for(resource, as: resource_name, url: admin_registration_path) do |f| %>

       <div class="row mb-3">
          <%= f.label :Name, class: "col-sm-5 col-form-label text-font" %>
        <div class="col-sm-7">
          <%= f.text_field :name, class: "form-control", placeholder: "xxxxxx" %>
       </div>
       </div>

       <div class="row mb-3">
          <%= f.label :Email, class: "col-sm-5 col-form-label text-font" %>
       <div class="col-sm-7">
          <%= f.email_field :email, class: "form-control", placeholder: "xxx@xxx" %>
       </div>
      </div>

      <div class="row mb-3">
          <%= f.label :Responsible, class: "col-sm-5 col-form-label text-font" %>
      <div class="col-sm-7">
          <%= f.text_field :responsible, class: "form-control", placeholder: "xxxxxx" %>
      </div>
      </div>

      <div class="row mb-3">
          <%= f.label :Password, class: "col-sm-5 col-form-label text-font" %>
      <div class="col-sm-7">
          <%= f.password_field :password, class: "form-control", placeholder: "xxxxxx" %>
      </div>
      </div>

      <div class="row mb-3">
          <%= f.label :Password_confirmation, class: "col-sm-5 col-form-label text-font" %>
      <div class="col-sm-7">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "xxxxxx" %>
      </div>
      </div>

      <div class="row justify-content-center">
          <%= f.submit "Enter", class: "btn btn-dark text-font" %>
      </div>
    <% end %>
    </div>
</div>









