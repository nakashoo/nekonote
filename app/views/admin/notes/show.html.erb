<div class='container'>
  <div class='row'>

    <div class='col-md-3'>
  　 <!--ログインサインインした人のuser情報を部分テンプレ-->
     <%#= render '/', obj: @ %>
    </div>

    <div class='col-md-9'>
     <div class="row mb-3">
      <table class="table table-bordered custom-table">
        <tr>
          <td><%= @note.title %></td>
        </tr>
        <tr>
          <td><%= @note.created_at.strftime("%Y-%m-%d %H:%M:%S") %><br>
            <%= @note.body %></td>
        </tr>
      </table>
     </div>

     <div class="row mb-3">
      <div class="col-sm d-flex justify-content-end">
        <%= link_to "一覧", admin_notes_path, class: "btn btn-dark" %>
      </div>
      <div class="col-sm d-flex justify-content-start">
        <%= link_to "編集", edit_admin_note_path, class: "btn btn-dark" %>
      </div>
     </div>
    </div>

  </div>
</div>

