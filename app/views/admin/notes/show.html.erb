
<div class="row mb-3">
  <table class="table table-bordered custom-table">
    <tr>
      <td><%= @note.title %></td>
    </tr>
    <tr>
      <td><%= @note.created_at.strftime("%Y-%m-%d %H:%M:%S") %><br>
      <div class="scrollable-note-show-text">
        <%= simple_format(@note.body) %>
      </div>
      </td>
    </tr>
  </table>
</div>

<div class='row mb-3'>
  <%= link_to "一覧", admin_notes_path, class: "btn btn-dark btn-sm mr-3" %>
  <%= link_to "編集", edit_admin_note_path, class: "btn btn-dark btn-sm mr-3" %>
  <%= link_to admin_note_path(@note), method: :delete, class: "btn btn-sm btn-dark btn-lg" do %>
    <i class="fa-solid fa-trash-can"></i>
  <% end %>
</div>

