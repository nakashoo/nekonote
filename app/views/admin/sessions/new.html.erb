<!--運営用 login画面-->
<div class="container">
    <div class="row mb-3 justify-content-center">
        <div class="col-4 d-flex justify-content-end">
          <%= link_to 'Guest log in', admin_guest_sign_in_path, method: :post, class: 'btn btn-dark me-2 text-font' %>
        </div>
        <div class="col-4 d-flex justify-content-center">
          <div class="text-dark btn btn-info me-2 text-font">Admin log in</div>
        </div>
        <div class="col-4 d-flex justify-content-start">
           <%= link_to "Admin sign in", new_admin_registration_path, class: "btn btn-outline-info text-font" %>
        </div>
    </div>

    <div class="row justify-content-center">
      <%= form_for(resource, as: resource_name, url: admin_session_path) do |f| %>

        <div class="row mb-3">
          <%= f.label :email, class: "col-sm-5 col-form-label text-font" %>
        <div class="col-sm-7">
          <%= f.email_field :email, class: "form-control", placeholder: "xxx@xxx" %>
        </div>
        </div>

        <div class="row mb-3">
          <%= f.label :password, class: "col-sm-5 col-form-label text-font" %>
        <div class="col-sm-7">
          <%= f.password_field :password, class: "form-control", placeholder: "xxxxxx" %>
        </div>
        </div>

        <div class="row mb-3">
          <%= f.label :password_confirmation, class: "col-sm-5 col-form-label text-font" %>
        <div class="col-sm-7">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "xxxxxx" %>
        </div>
        </div>

        <div class="row justify-content-center">
          <%= f.submit "Enter", class: "btn btn-dark text-font" %>
        </div>
      <% end %>
    </div>
</div>


