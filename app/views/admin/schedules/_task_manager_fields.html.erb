<div class='nested-fields'>
  <div class="row">
   <div class="col-md-6">
    <div class="field">
      <%= f.label :task_id %>
      <%= f.collection_select :task_id, Task.all, :id, :name, include_blank: "--選択してください--" %>
    </div>

    <div class="field">
      <%= f.label :締切 %>
      <%= f.date_field :deadline_date %>
    </div>


   </div>
   <div class="col-md-6">
      <%= link_to_remove_association f, class: "btn btn-sm btn-dark btn-lg" do %>
       <i class="fa-solid fa-trash-can"></i>
      <% end %>
   </div>
  </div>
</div>

