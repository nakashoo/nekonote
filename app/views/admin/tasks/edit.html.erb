<div class='btn btn text-font'>
  <h2>Schedule > タスク</h2>
</div>

<div class="row">
  <%= form_with model: @task, url: admin_task_path(@task.id), method: :patch, local: true do |f| %>

  <table class="table">
    <tbody>
      <tr>
         <td><%= f.label :name, "タスク", class:'mr-5' %>
             <%= f.text_field :name, placeholder: 'task' %>
         </td>
         <td><%= link_to "戻る", admin_tasks_path, class: "btn btn-sm btn-dark btn-lg" %></td>
         <td><%= f.submit "更新", class: "btn btn-dark ml-5 btn-sm" %></td>
         <td><%= link_to admin_task_path(@task), method: :delete, class: "btn btn-sm btn-dark btn-lg" do %>
              <i class="fa-solid fa-trash"></i>
             <% end %>
         </td>
      </tr>
    </tbody>
  </table>

  <% end %>
</div>
