<div class='container'>
  <div class='row'>

    <div class='col-md-3'>
  　 <!--ログインサインインした人のuser情報を部分テンプレ-->
     <%#= render '/', obj: @ %>
    </div>


    <div class='col-md-9'>

   <%= form_with url: admin_link_path, method: :patch, model: @link do |f| %>
      <div class="form-group">
        <%= f.label :Link先 %>
        <%= f.text_field :title, class: 'form-control book_title' %>
      </div>
      <div class="form-group">
        <%= f.label :URL %>
        <%= f.text_area :url, class: 'form-control book_body' %>
      </div>
      <div class="row justify-content-center">
       <%= f.submit "更新", class: "btn btn-dark" %>
      </div>
    <% end %>
    </div>

  </div>
</div>
