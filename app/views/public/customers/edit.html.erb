<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto text-font">
    <%= form_with url: customers_information_path, method: :patch, model:current_customer do |f| %>
      <%= render 'layouts/error_messages', model: f.object%>

    <h2>User info</h2>
      <div class="field">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :member_ship_year %>
        <%= f.text_area :member_ship_year, class: "form-control responsible" %>
      </div>
      <div class="form-group row justify-content-center">
        <%= f.submit "更新", class: "btn btn-dark" %>
      </div>
    <% end %>
  </div>
</div>
</div>